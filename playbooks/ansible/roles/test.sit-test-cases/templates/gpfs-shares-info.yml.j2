shares:
  {%- for share in samba_shares +%}
    {%- for method in config.be.methods +%}
  {{ share.name }}-{{ config.be.name }}-{{ config.be.variant}}-{{ method }}:
    backend:
      name: {{ config.be.name }}
      variant: {{ config.be.variant}}
      path: {{ config.paths.mount }}/backends/{{ share.name }}
    {%- endfor +%}
  {%- endfor +%}
